}
.comment_list{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  margin-bottom: 70rpx
}
.namebox{
  font-size: 18rpx;
  color: #46cc8c;
  line-height: 1
}
.photo_img_body{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  overflow: hidden
}
.photo_img_body image{
  width: 100%;
  height: 100%;
  display: block
}
.right_name_desc{
  width: 633rpx;
}
.descbox{
  color: #333333;
  font-size: 22rpx;
  line-height: 1;
  margin-top: 20rpx
}
.before_time{
  font-size: 18rpx;
  color: #333333;
  line-height: 1;
  margin-top: 38rpx
}
.mall_res{
  padding: 28rpx;
  margin-top: 24rpx;
  background: #f8f8f8;
  font-size: 20rpx;
  color: #666666
}
