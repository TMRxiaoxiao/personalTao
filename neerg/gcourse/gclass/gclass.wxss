.ban_img{
	width: 100%;
}
.ban_title{
	width: calc( 100vw - 54rpx);
	margin: 0 auto;
	box-sizing: border-box;
	color: #333;
	font-size: 25rpx;
	line-height: 50rpx;
	padding: 47rpx 0;
}
/* 内容部分 */
.list_box{
	width: calc( 100vw - 54rpx);
	margin: 0 auto;
	height: auto;
	margin-top: 33rpx;
}
.title{
	font-size: 40rpx;
	font-family: "Microsoft YaHei";
	font-weight: bold;
	line-height: 1;
	margin-bottom: 27px;
}
.titleDesc{
	font-size: 24rpx;
	color: #2b2b2b;
	line-height: 1;
	letter-spacing: 12px;
	margin-bottom: 60rpx;
}
.contentImg{
	width: 100%;
	height: 480rpx;
	font-size: 0;
	line-height: 0;
	background: #f8f8f8;
	border-radius: 5rpx;
	box-sizing: border-box;
	overflow: hidden;
	margin-bottom: 35rpx;
}
.contentImg image{
	width: 100%;
	height: 348rpx;
}
.img_desc{
	float: left;
	color: #333;
	font-size: 32rpx;
	width: 470rpx;
	line-height: 132rpx;
	padding-left: 27rpx;
	box-sizing: border-box;
	display: block;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
  font-weight: bold
}
.img_check{
	float: right;
	color: #333;
	font-size: 25rpx;
	font-weight: bold;
	width: 172rpx;
	height: 69rpx;
	line-height: 67rpx;
	text-align: center;
	border-radius: 69rpx;
	border: solid 1rpx #333;
	background: #fff;
	margin: 28rpx 22rpx 0 0;
}
.contentImg.hover .img_check{
	color: #fff;
	border: solid 1rpx #46cc8c;
	background: #46cc8c;
}