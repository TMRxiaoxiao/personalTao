/* cardDetail1/cardDetail1.wxss */
@import "/wxParse/wxParse.wxss";
.bac{
  width: 750rpx;
  height: 588rpx;
  position: relative
}
.hs_bac{
  width: 750rpx;
  height: 292rpx;
  background: #f5f5f5
}
.card_box{
  width: 583rpx;
  height: 344rpx;
  border-radius: 20rpx;
  background: #6dd899;
  position: absolute;
  top: 98rpx;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
}

.card_type{
  position: absolute;
  right: 38rpx;
  top: 42rpx;
  color: #fff;
  font-size: 47rpx;
  font-weight: bold
}
.fenge{
  width: 694rpx;
  height: 1px;
  background: #dddddd;
  margin: 0 auto
}
.rules{
  width: 694rpx;
  height: auto;
  padding-top: 80rpx;
  font-size: 20rpx;
  color: #333333;
  margin: 0 auto;
  line-height: 46rpx
}
.rules text:nth-child(1){
  font-size: 26rpx;
  color: #000
}
.tiaoxingma{
  width: 640rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
  bottom: 38rpx;
  z-index: 1000;
  display: flex;
  justify-content: space-between;
  color: #333333;
  font-size: 25rpx;
}
.tiaoxingma image{
  width: 100%;
  height: 100%
}
.card_box image{
  width: 100%;
  height: 100%;
}
.coverBOx{
  width: calc(100vw - 0rpx);
  height: 100%;
  background: rgba(0,0,0,0.5);
}
.buyBtn{
  width: 750rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  background: #6dd899;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 30rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0;
  border-radius: 10rpx;
}