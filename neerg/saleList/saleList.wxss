/* saleList/saleList.wxss */
.saleList_box{
  width: calc( 100vw - 54rpx);
  margin:55rpx auto;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0px 6px 22px #d7d7d7;
}
.img_sale{
  width: 100%;
  height: 347rpx;
  position: relative
}
.img_sale image{
  width: 100%;
  height: 100%;
}
.pt_desc{
  width: 100%;
  height: 132rpx;
  padding-top: 42rpx;
  position: relative
}
.pt_desc text{
  display: block;
  margin-left: 26rpx;
}
.pt_desc text:nth-child(1){
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
}
.pt_desc text:nth-child(2){
  width: 334rpx;
  color: #808080;
  font-size: 25rpx;
  margin-top: 12rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden
}
.join_button{
  width: 170rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 25rpx;
  color: #000;
  font-weight: bold;
  border-radius: 50rpx;
  border: 1px solid #000;
  position: absolute;
  right: 30rpx;
  top: 35rpx;
}
.price > text:nth-child(2){
  width: 58rpx;
  display: inline-block;
  font-size: 31rpx;
  color: #e1000f !important;
  position: absolute;
  top: 39rpx;
  right: 208rpx;
  font-weight: bold;
}
.price > text:nth-child(1){
  width: 30rpx;
  display: inline-block;
  font-size: 22rpx;
  color: #e1000f !important;
  position: absolute;
  top: 57rpx;
  right: 262rpx;
}
.ptLogo{
  width: 67rpx;
  height: 31rpx;
  border-radius: 20rpx;
  background: #e1000f;
  color: #fff;
  line-height: 31rpx;
  text-align: center;
  position: absolute;
  font-size: 20rpx;
  left: 26rpx;
  bottom: 18rpx;
  font-weight: bold
}
.logo_time{
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  left: 107rpx;
  bottom: 28rpx;
  line-height: 1
}
.logo_time image{
  width: 100%;
  height: 100%
}
.time_over{
  width: 403rpx;
  height: 20rpx;
  /* background: pink; */
  position: absolute;
  left: 136rpx;
  bottom: 20rpx;
  font-size: 20rpx;
  color: #e1000f;
  line-height: 20rpx
}
