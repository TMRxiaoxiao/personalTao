<!--orders/cardPay/cardPay.wxml-->
<view class='content'>
  <block>
    <view class="list">
      <view class="time_state">
        <text class="time">消费项目</text>
      </view>
      <view class="details">
        <image src="https://store.ineerg.com{{data.thumb}}"></image>
        <view class="right">
          <text class="title">{{data.name}}</text>
          <text class="price">￥{{data.price}}</text>
          <text class="number">X1</text>
        </view>
      </view>
      <view class="real_payment">小计:
        <text>￥{{data.price}}</text>
      </view>
    </view>
  </block>
</view>
<view class='fixed_btn'>
  <view class='pay_box'>
    <text>实付款：</text>
    <text>￥{{data.price}}</text>
  </view>
  <view class='pay_btn' bindtap='pay_btn'>确认付款</view>
</view>
