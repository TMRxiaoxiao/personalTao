/* zhengdangji/zhengdangji.wxss */
.guding{
  width: 750rpx;
  background: #fff;
  z-index: 20000;
  overflow: hidden;
  position: fixed;
  top: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
  left: 0;
}
.top_nav{
  width: 610rpx;
  height: 102rpx;
  display: flex;
  margin: 0 auto;
  justify-content: space-between;
  font-size: 24rpx;
  color: #808080;
  font-weight: bold;
  z-index: 10000;
  background: #fff
}
.heng{
  width: 750rpx;
  height: 1px;
  background: #dbdbdb;
  position: fixed;
  top: 103rpx;
  left: 0
}
.nav_one{
  font-size: 26rpx;
  line-height: 102rpx;
  text-align: center;
  box-sizing: border-box;
  height: 86rpx
}
.border{
  border-bottom: 6rpx solid #71eba2;
  color: #71eba2;
}
.ds{
  display: none;
}
.show{
  display: block
}
.content{
  width: calc(100vw - 54rpx);
  height: auto;
  margin: 20rpx auto;
}
.list_one{
  width: 100%;
  height: 450rpx;
  border-radius: 10rpx;
  position: relative
}
.list_one image{
  width: 100%;
  height: 100%
}
.viewCount{
  width: 90rpx;
  height: 24rpx;
  position: absolute;
  bottom: 27rpx;
  left: 40rpx;
}
.viewCount image{
  width: 32rpx;
  height: 22rpx;
  position: absolute;
  top: 0;
  left: 0
}
.viewCount > text{
  position: absolute;
  top: 0;
  left:40rpx;
  font-size: 20rpx;
  line-height: 22rpx;
  color: #fff;
}
/* saleList/saleList.wxss */
.saleList_box{
  width: calc( 100vw - 54rpx);
  margin:55rpx auto;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0px 6px 22px #d7d7d7;
}
.img_sale{
  width: 100%;
  height: 347rpx;
  position: relative;
  overflow: hidden
}
.img_sale image{
  width: 100%;
}
.pt_desc{
  width: 100%;
  height: 132rpx;
  padding-top: 42rpx;
  position: relative
}
.pt_desc text{
  display: block;
  margin-left: 26rpx;
}
.pt_desc text:nth-child(1){
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
}
.pt_desc text:nth-child(2){
  width: 334rpx;
  color: #808080;
  font-size: 25rpx;
  margin-top: 12rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden
}
.join_button{
  width: 170rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 25rpx;
  color: #000;
  font-weight: bold;
  border-radius: 50rpx;
  border: 1px solid #000;
  position: absolute;
  right: 30rpx;
  top: 35rpx;
}
.price > text:nth-child(2){
  width: 110rpx;
  display: inline-block;
  font-size: 31rpx;
  color: #e1000f !important;
  position: absolute;
  top: 39rpx;
  right: 222rpx;
  font-weight: bold;
}
.price > text:nth-child(1){
  width: 30rpx;
  display: inline-block;
  font-size: 22rpx;
  color: #e1000f !important;
  position: absolute;
  top: 57rpx;
  right: 325rpx;
}
.ptLogo{
  width: 67rpx;
  height: 31rpx;
  border-radius: 20rpx;
  background: #e1000f;
  color: #fff;
  line-height: 31rpx;
  text-align: center;
  position: absolute;
  font-size: 20rpx;
  left: 26rpx;
  bottom: 18rpx;
  font-weight: bold
}
.logo_time{
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  left: 107rpx;
  bottom: 20rpx;
  line-height: 1
}
.logo_time image{
  width: 100%;
  height: 100%
}
.time_over{
  width: 403rpx;
  height: 20rpx;
  /* background: pink; */
  position: absolute;
  left: 136rpx;
  bottom: 20rpx;
  font-size: 20rpx;
  color: #e1000f;
  line-height: 20rpx
}
